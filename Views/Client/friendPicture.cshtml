@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using ClickInFinal.Models
@model IEnumerable<imageBo>

<body style="background: repeat; background-image: url(/Content/img6.jpg)">
    <div class="col-lg-8">
        <div style="position: relative; top: 0">
            @{
                User u = (User)ViewBag.host;
                <img src="/Content/@u.userId/@u.cover" height="400" width="800" style="position: relative; top: 0; left: 0" />
                <img src="/Content/@u.userId/@u.profile"  style="position: absolute; top: 60%; left:30px" height="150" width="200"/>
       
           
                <h1 style="position: absolute; top: 80%; left: 35%; color: white">@u.fname @u.lname</h1>
        
            }



        </div>

        <ul class=" nav navbar-nav navbar navbar-inverse" style="background-color:white">
            
            <li>
                <a href="friendPicture?name=@u.userId" class = "hvr-bounce-to-bottom">Picture</a>

            </li>
            <li>
                <a href="friendPost?name=@u.userId" class = "hvr-bounce-to-bottom">Post</a>
            </li>

            <li>
                <a href="friendVideo?name=@u.userId" class = "hvr-bounce-to-bottom">Video</a>
            </li>
        </ul>
        <br />

    </div>




    @foreach (imageBo b in Model)
    {
        <div class="col-lg-3" id="div1_@b.Id"></div> 

        <div class="col-lg-8 " id="div_@b.Id" style="margin-left:3%">
            <br />
            <div class="col-lg-6 " style="background-color: white">
                <div style="padding-top: 2%">
                    <img src="/Content/@b.User/@b.ImgPath" height="30" class="img-circle"/>
                    <a href="#" class="">@b.Fname @b.Lname</a>
                    <input type="button" value="Report"  class="btn btn-danger hvr-bounce-in pull-right" onclick="reportPicture(@b.Id)"/>
                </div>
                
                    <img src="/Content/@b.User/@b.ImageName" height="300"  style="padding-top:2%;max-width:95%;padding-top:2%" data-toggle="modal" data-target="#@b.Id"/>
                    <div style="padding-top: 2%">

                        <a href="#">
                            <p id="count_@b.Id">
                                @b.Count Likes<p>
                        </a>
                        <div class="col-lg-7 pull-right">

                            @if (b.YouLike.Equals(false))
                            {           
                                <input type="button" id="btn_@b.Id" value="Like"  class="btn btn-primary" onclick="like(@b.Id)"/>
                            }
                            @{
                           
                                <input type="button" value="Share"  class="btn btn-success" onclick="share(@b.Id)"/> 
                           
                            }
                        </div>
                        <br />
                        <br />
                        <div>
                            <div id="cmnt_@b.Id">
                                @foreach (Comment c in b.CoomentLi)
                                {
                                    <img src="/Content/@c.Username/@c.PicPath" height="50" width="50" class="img-circle"  />
                                    <a href="#">@c.Fname @c.Lname</a>
                                    <p style="color: black">@c.Comment1</p>
                                    <br /> 
                                }


                            </div>
                            <input type="text" id="txt_@b.Id" placeholder=" Comment on picture" style="border:solid;height:50px;width:300px"/>
                            <input type="button" value="Comment"  class="btn btn-primary" onclick="comment(@b.Id)"/>
                            <br />
                            <br />
                        </div>


                    </div>
            </div>
        </div>
        
        
        <div id="@b.Id" class="modal fade" role="dialog">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-body">
                        <center>
                            <button type="button" class="close" data-dimiss="modal"> &times;</button>
                            <img src="/Content/@b.User/@b.ImageName" class="img-responsive"/>
                        </center>
                    </div>
                </div>
            </div>
        </div>

    }


</body>

